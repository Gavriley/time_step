default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  database: time_step_development
  username: postgres
  password: postgres

test:
  <<: *default
  database: time_step_test
  username: postgres
  password: postgres

production:
  <<: *default
  database: time_step_production
  username: postgres
  password: postgres