<% if @record.errors.present? %>
  <% key, error = @record.errors.first %>
  $('#errors_block').html('<div class="alert alert-danger" role="alert"><%= j(error) %></div>');
<% end %>

$('#record_form').html('<%= j(render 'form') %>');

<% if @last_record %>
  $('#record_list').prepend('<%= j(render @last_record) %>');
<% end %>
